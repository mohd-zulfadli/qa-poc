pipeline {
    agent any
    stages {
        stage('TestNG Tests') {
            steps {
                dir('java-tests') {
                    sh 'mvn clean test -Dtest=com.example.tests.Scenario1Test#testLogin,testUpdateDOB'
                }
            }
        }
    }
    post {
        always {
            // Collect Surefire XMLs for Jenkins test tab
            junit 'java-tests/target/surefire-reports/*.xml'

            // Publish TestNG native HTML report
            publishHTML([
                reportDir: 'java-tests/test-output',
                reportFiles: 'index.html',
                reportName: 'TestNG Report'
            ])

            // Archive reports for download
            archiveArtifacts artifacts: 'java-tests/target/surefire-reports/**', fingerprint: true
        }
    }
}
