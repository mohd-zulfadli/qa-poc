pipeline {
    agent any
    stages {
        stage('TestNG Tests') {
            steps {
                dir('java-tests') {
                    sh 'mvn clean test'
                }
            }
        }
    }
    post {
        always {
            // Collect TestNG results (Surefire plugin outputs JUnit XMLs)
            junit 'java-tests/target/surefire-reports/*.xml'

            // Archive any reports for download
            archiveArtifacts artifacts: 'java-tests/target/surefire-reports/**', fingerprint: true
        }
    }
}
